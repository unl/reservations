            <% if !digitalFabricationAlerts.empty? %>
                <h4> Digital Fabrication Alerts </h4>
                <% digitalFabricationAlerts.each do |alert| %>
                    <input <%= 'checked="checked"' if alert_ids.include?(alert.id)%> type="checkbox" name="alert_id_<%=alert.id%>" value=<%=alert.id%> /> <%= alert.name %> <br/>
                    <% if !alert.description.blank? %>
                        <p>- <%=alert.description%> </p>
