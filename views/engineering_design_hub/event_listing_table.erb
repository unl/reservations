<div class="dcf-modal" id="enter-code-modal-<%= id || "none" %>" hidden>
  <div class="dcf-modal-wrapper">
    <div class="dcf-modal-header">
      <h2>Code Required</h2>
      <button class="dcf-btn-close-modal">Close</button>
    </div>
    <div class="dcf-modal-content">
        <p>To sign up for this event, please enter the code that you received from event organizer.

        <form class="dcf-form inline-form" id="signup-with-code-form-<%= id || "none" %>" action="" method="POST">
            <div class="dcf-form-group">
                <label for="code">Event Signup Code:</label>
                <input type="text" id="event_code" name="event_code" />
            </div>
            <button type="submit" class="dcf-btn dcf-btn-primary">Sign Up!</button>
        </form>
    </div>
  </div>
</div>

<table class="dcf-table dcf-table-striped dcf-table-responsive dcf-mb-6">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Date/Location</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    <% all_private = true %>
    <% events.each do |event| %>
        <% if !event.is_private || (event.is_private && has_permission?(Permission::MANAGE_EVENTS)) %>
            <tr>
                <td class="small-hidden">
                    <a href="<%= event.info_link %>"><%= event.title %></a>
                </td>
                <td>
                    <%= event.start_time.in_time_zone.strftime('%m/%d/%Y @ %l:%M %P') %><br>
                    <%= event.location.name %>
                </td>
                <td>
                <% if @user.signed_up_event_ids.include?(event.id) %>
                    Signed up!
                <% elsif !event.max_signups.nil? && event.signups.count >= event.max_signups %>
                    Event is full.
                <% elsif !event.signup_allowed_for_type? %>
                    <a href="<%= event.info_link %>">View for details on how to signup.</a>
                <% elsif event.machine_training_event_type? %>
                    <form class="dcf-form inline-form" action="/tools/trainings/sign_up/<%= event.id %>/" method="POST">                                                         
                        <button type="submit" <% if event.event_code.present? %> onclick="promptCode('/tools/trainings/sign_up/<%= event.id %>/', <%= id || "none" %>, event);" data-toggles-modal="enter-code-modal-<%= id || "none" %>" <% end %>  class="dcf-btn dcf-btn-primary dcf-btn-toggle-modal" href="/tools/trainings/sign_up/<%= event.id %>/">Sign Up!</button>
                    </form>
                <% else %>
                    <form class="dcf-form inline-form" action="/workshops/sign_up/<%= event.id %>/" method="POST">
                        <button type="submit" <% if event.event_code.present? %> onclick="promptCode('/workshops/sign_up/<%= event.id %>/', <%= id || "none" %>, event);" data-toggles-modal="enter-code-modal-<%= id || "none" %>" <% end %> class="dcf-btn dcf-btn-primary dcf-btn-toggle-modal" href="/workshops/sign_up/<%= event.id %>/">Sign Up!</button>
                    </form>
                <% end %>
                </td>
            </tr>
            <% all_private = false %>
        <% end %>
    <% end %>
    <% if events.count == 0 || all_private %>
        <tr>
            <td colspan="3">No Events Scheduled</td>
        </tr>
    <% end %>
    </tbody>
</table>

<script>
    function promptCode(signupLink, id, event) {
        event.preventDefault();
        document.getElementById(`signup-with-code-form-${id}`).setAttribute('action', signupLink);
    }
</script>